= simple_form_for @floor do |f|
  .row
    .col-md-12
    
      = f.input :name
      = f.input :level
      = f.input :location_id, collection: Location.order("name ASC").all, label_method: :name, value_method: :id
      = f.association :limitations, collection: Limitation.order("name ASC").all, as: :check_boxes, label_method: :name, value_method: :id, include_blank: false
      
  = f.button :submit, class: 'btn btn-success'
