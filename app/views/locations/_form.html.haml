= simple_form_for @location do |f|
  .row
    .col-md-12
    
      = f.input :name
      = f.input :street
      = f.input :house_number
      = f.input :zip_code
      = f.input :city
      = f.input :state
      = f.input :country
      = f.input :tenant_id, collection: Tenant.order("name ASC").all, label_method: :name, value_method: :id
      = f.association :limitations, collection: Limitation.order("name ASC").all, as: :check_boxes, label_method: :name, value_method: :id, include_blank: false
      
  = f.button :submit, class: 'btn btn-success'
